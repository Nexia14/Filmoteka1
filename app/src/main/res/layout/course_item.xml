<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="405dp"
        android:layout_height="264dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/fon_karta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/f_image"
            android:layout_width="156dp"
            android:layout_height="216dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/tvari"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/f_name"
            android:layout_width="156dp"
            android:layout_height="34dp"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/baloo_paaji"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/f_image" />

        <TextView
            android:id="@+id/f_genre"
            android:layout_width="70dp"
            android:layout_height="21dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/baloo_paaji"
            android:gravity="center"
            android:text="Genre"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/f_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/f_description"
            android:layout_width="206dp"
            android:layout_height="216dp"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/baloo_paaji"
            android:gravity="center"
            android:text="description"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/f_image"
            app:layout_constraintTop_toBottomOf="@+id/f_genre"
            app:layout_constraintVertical_bias="0.272" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>